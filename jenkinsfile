pipeline {
    agent any

    environment {
        IMAGE_NAME = "python-ci-cd-app"
        IMAGE_TAG = "1.0"
        NEXUS_DOCKER_REPO = "nexus.example.com:8083"
        SONARQUBE_SERVER = "SonarQube"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/swetha-200160/python-.git'
            }
        }

        stage('Install Dependencies & Test') {
            steps {
                sh '''
                pip install -r requirements.txt
                pytest
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    sh 'sonar-scanner'
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                '''
            }
        }

        stage('Push Image to Nexus') {
            steps {
                sh '''
                docker tag ${IMAGE_NAME}:${IMAGE_TAG} \
                ${NEXUS_DOCKER_REPO}/${IMAGE_NAME}:${IMAGE_TAG}

                docker push ${NEXUS_DOCKER_REPO}/${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                docker rm -f python-app || true
                docker run -d \
                  --name python-app \
                  -p 5000:5000 \
                  ${NEXUS_DOCKER_REPO}/${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }
    }
}
